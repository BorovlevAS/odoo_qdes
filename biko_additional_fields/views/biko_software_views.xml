<odoo>
    <record id="biko_software_action_tree" model="ir.actions.act_window">
        <field name="name">Software</field>
        <field name="res_model">biko.software</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a Software
            </p>
            <p>
                Odoo helps you track all activities related to your Software.
            </p>
        </field>
    </record>

    <record id="biko_software_view_tree" model="ir.ui.view">
        <field name="name">biko.software.view.tree</field>
        <field name="model">biko.software</field>
        <field name="arch" type="xml">
            <tree string="Software" editable="bottom">
                <field name="name"/>
            </tree>
        </field>
    </record>

</odoo>