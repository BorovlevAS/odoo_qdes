<odoo>
    <record id="biko_source_action_tree" model="ir.actions.act_window">
        <field name="name">Sources</field>
        <field name="res_model">biko.source</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="biko_source_view_tree" model="ir.ui.view">
        <field name="name">biko.source.view.tree</field>
        <field name="model">biko.source</field>
        <field name="arch" type="xml">
            <tree string="Sources" editable="bottom">
                <field name="name"/>
            </tree>
        </field>
    </record>

</odoo>